<div class="container px-5 px-sm-0 margin-top">
  <% if flash[:count] %>
    <div class="error_explanation">
      <h3><%= flash[:count] %>  error prohibited this obj from being saved:</h3>
      <ul>
        <% flash[:messages].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block user-edit-btn" href="/users/<%= @user.id %>/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <%= render 'layouts/new_book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <% @users.each do |user| %>
              <% if book.user_id == user.id %>
                <td>
                  <a href="/users/<%= user.id %>">
                    <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
                  </a>
                </td>
              <% end %>
            <% end %>
            <td><%= link_to "#{book.title}", book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>